<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    tools:context=".MainActivity">

    <!-- Limita la altura del header (ajusta el percent si quieres) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/headerLimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.24" />

    <!-- HEADER (título centrado + lista scrollable) -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="14dp"
        android:background="@drawable/bg_header_round"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/headerLimit">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mi familia"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/header_title"
            android:gravity="center"/>

        <!-- La lista scrollea DENTRO del header -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:fillViewport="true"
            android:overScrollMode="ifContentScrolls"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/listFamily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mi casa — Santa Cruz"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_item_btn_1"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/item2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tías — Basilio"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_item_btn_2"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/item3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tías — Caral"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_item_btn_3"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/item4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Abuela"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_item_btn_4"
                    android:clickable="true"
                    android:focusable="true"/>

                <TextView
                    android:id="@+id/item5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Burrito"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:padding="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/bg_item_btn_5"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- MAPA ocupa todo lo demás -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
